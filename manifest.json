{
    "name": "Extension Scaffold",
    "version": "1.0",
    "description": "A study in Chrome extensions",
    "manifest_version": 2,

    "incognito": "split",

    "chrome_url_overrides": {
        "newtab": "html/index.html"
    },

    "browser_action": {
        "default_popup": "html/popup.html"
    },

    "permissions": [
        "activeTab",
        "contextMenus",
        "https://web.expasy.org/cgi-bin/translate/*"
    ],

    "icons": {
        "128": "icon.png"
    }
}
